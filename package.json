{
  "name": "haven",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.18.1",
  "description": "",
  "author": "",
  "license": "ISC",
  "keywords": [],
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:infra": "docker compose -f infra/docker-compose.yml up -d && docker compose -f infra/docker-compose.yml ps | grep -q 'healthy' && docker compose -f infra/docker-compose.yml down",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "infra:up": "docker compose -f infra/docker-compose.yml up -d",
    "infra:down": "docker compose -f infra/docker-compose.yml down",
    "infra:logs": "docker compose -f infra/docker-compose.yml logs -f",
    "db:up": "docker compose -f infra/docker-compose.yml up -d postgres",
    "db:down": "docker compose -f infra/docker-compose.yml down postgres",
    "db:logs": "docker compose -f infra/docker-compose.yml logs -f postgres",
    "db:shell": "docker compose -f infra/docker-compose.yml exec postgres psql -U haven -d haven_dev || (echo 'Error: Database not running. Start with: pnpm db:up' && exit 1)"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@haven/eslint-config": "workspace:*",
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "typescript": "^5.9.3"
  }
}
